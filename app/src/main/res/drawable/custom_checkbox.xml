<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green" /> <!-- Color for the checkmark -->
            <stroke
                android:width="2dp"
                android:color="@color/gray" /> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Optional: rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Background color when unchecked -->
            <stroke
                android:width="2dp"
                android:color="@color/gray" /> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Optional: rounded corners -->
        </shape>
    </item>
</selector>
